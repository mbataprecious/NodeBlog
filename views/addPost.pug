extends layout.pug

block content
	h1=title
	ul.errors
		if errors
			each error, i in errors
				li.alert.alert-danger #{error.msg}
	form(method='post', action='/post/add', enctype="multipart/form-data")
		.form-group
			label Title:
			input.form-control(name='title', type='text' required)
		.form-group
			label Category
			select.form-control(name='category' required)
					each category in categories
						option(value=category.name) #{category.name}
		.form-group
			label Body
			textarea.form-control(name='body', id='body' required)
		.form-group
			label Main Image:
			input.form-control(name='mainimage', type='file')
		.form-group
			label Author:
			select.form-control(name='author' required)
				option(value='Brad Traversy') Brad Traversy
				option(value='John Doe') John Doe
		input.btn.btn-default(name='submit',type='submit',value='Save')
		script(src="/ckeditor/ckeditor.js" type="text/javascript")
		script CKEDITOR.replace('body');