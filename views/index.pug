extends layout

block content
 if posts
   each post, i in posts
    .post
      h1
       a(href="/post/show/"+post._id)
         =post.title
      p.meta Posted in
       a(href="/"+post.category)=' '+post.category+' '
       by #{post.author} on #{moment(post.date).format("MM-Do-YYYY")}
      image.img(src="/upload/"+urlFormater(post.mainimage))
      != truncateText(post.body,150) + '.....'
      a.more(href="/post/show/"+post._id) Read more
  
